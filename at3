<?php
//3. Faça um algoritmo que verifique se uma letra digitada é "F" ou "M". Conforme a letra escrever: F -
//Feminino, M - Masculino, Sexo Inválido.

print "Digite a letra inicial do seu genero:";
$letra= trim(fgets(STDIN));

    if($letra == 'm' or $letra == 'M' ){
    print"Sexo Masculino";
    }

    elseif($letra == 'f' or $letra == 'F'){
    print "Sexo Feminino";
    
    }
    else{
    print "Sexo inválido";
}
